{
  "name": "@azumaxoid/lcp-performance-tracer",
  "version": "1.0.0",
  "description": "A TypeScript library for tracking LCP performance and sending trace data to New Relic",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types && npm run build:standalone",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:standalone": "rollup -c rollup.config.js",
    "build:standalone:watch": "rollup -c rollup.config.js --watch",
    "analyze:bundle": "npm run build:standalone && ls -lh dist/standalone/*.js | awk '{print $9, $5}'",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "lcp",
    "performance",
    "monitoring",
    "new-relic",
    "web-vitals",
    "typescript"
  ],
  "author": "Azumaxoid",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^2.79.2",
    "rollup-plugin-sizes": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Azumaxoid/nr-browser-resource-tracer.git"
  },
  "bugs": {
    "url": "https://github.com/Azumaxoid/nr-browser-resource-tracer/issues"
  },
  "homepage": "https://github.com/Azumaxoid/nr-browser-resource-tracer#readme",
  "publishConfig": {
    "access": "public"
  }
}
